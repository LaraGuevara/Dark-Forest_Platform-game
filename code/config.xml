<!-- Config file for the engine -->
<config>
  <engine>
    <title>My platformer game</title>
    <maxFrameDuration value="16"/>
  </engine>

  <render>
    <vsync value="false"/>
  </render>

  <window>
    <resolution width="1280" height="640" scale="2"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>
  
  <scene>
    <map path="Assets/Maps/" name="NewCandyMap.tmx"/>
    <entities>
      <player x="100" y="0" w="48" h ="32" texture="Assets/Textures/player/Animations.png">
        <animations>
          <idle loop="true" speed ="0.075">
            <frame x="0" y="0" w="48" h="32"/>
            <frame x="48" y="0" w="48" h="32"/>
            <frame x="96" y="0" w="48" h="32"/>
            <frame x="144" y="0" w="48" h="32"/>
            <frame x="192" y="0" w="48" h="32"/>
            <frame x="240" y="0" w="48" h="32"/>
            <frame x="288" y="0" w="48" h="32"/>
            <frame x="336" y="0" w="48" h="32"/>
            <frame x="384" y="0" w="48" h="32"/>
			<frame x="432" y="0" w="48" h="32"/>
			<frame x="480" y="0" w="48" h="32"/>
			<frame x="528" y="0" w="48" h="32"/>
          </idle>
		  <walking loop="true" speed ="0.1">
            <frame x="0" y="32" w="48" h="32"/>
            <frame x="48" y="32" w="48" h="32"/>
            <frame x="96" y="32" w="48" h="32"/>
            <frame x="144" y="32" w="48" h="32"/>
			<frame x="192" y="32" w="48" h="32"/>
          </walking>
		  <jumping loop="false" speed ="0.075">
            <frame x="0" y="64" w="48" h="32"/>
            <frame x="48" y="64" w="48" h="32"/>
            <frame x="96" y="64" w="48" h="32"/>
            <frame x="144" y="64" w="48" h="32"/>
            <frame x="192" y="64" w="48" h="32"/>
            <frame x="240" y="64" w="48" h="32"/>
            <frame x="288" y="64" w="48" h="32"/>
          </jumping>
                 <death loop="false" speed ="0.075">
            <frame x="0" y="96" w="48" h="32"/>
            <frame x="48" y="96" w="48" h="32"/>
            <frame x="96" y="96" w="48" h="32"/>
            <frame x="144" y="96" w="48" h="32"/>
            <frame x="192" y="96" w="48" h="32"/>
            <frame x="240" y="96" w="48" h="32"/>
            <frame x="288" y="96" w="48" h="32"/>
            <frame x="336" y="96" w="48" h="32"/>
          </death>
        </animations>
      </player>
      <enemies>
        <enemy name="badguy" x="300" y="160" w="32" h="32" texture="Assets/Textures/enemies/walking_enemy.png" gravity="true">
          <animations>
            <idle loop="true" speed ="0.5">
              <frame x="0" y="0" w="32" h="32"/>
              <frame x="32" y="0" w="32" h="32"/>
              <frame x="64" y="0" w="32" h="32"/>
              <frame x="96" y="0" w="32" h="32"/>
            </idle>
          </animations>
          </enemy>
      </enemies>
    </entities>
  </scene>
</config>